{
    "compilerOptions": {
      "target": "ES2015",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "@/*": ["*"],
          "@modules/*": ["src/*"]
      }
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended",
    "extends": "@tsconfig/recommended/tsconfig.json"
  }